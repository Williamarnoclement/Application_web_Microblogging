          <input id="email" name="email" type="text" placeholder="courrier electronique" class="form-control input-md" required="">

        </div>
      </div>

      <!-- Password input-->
      <div class="form-group">
        <label class="col-md-4 control-label" for="password">password</label>
        <div class="col-md-4">
          <input id="password" name="password" type="password" placeholder="mot de passe" class="form-control input-md">
        </div>
      </div>

      <input class="action" type="submit" value="Log In">

</form>
